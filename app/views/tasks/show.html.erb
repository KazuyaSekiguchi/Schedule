 <h3>予定詳細</h3>
 
 <table>
   <tr>
     <th>タイトル</th>
     <td><%= @task.title %></td>
   </tr>
   <tr>
     <th>開始日</th>
     <td><%= @task.start_date %></td>
   </tr>
   <tr>
     <th>終了日</th>
     <td><%= @task.end_date %></td>
   </tr>
   <tr>
     <th>終日</th>
     <td>
      <% if @task.all_day == true %>
      ◯
      <% else @task.all_day == false %>
      <% end %>
     </td>
   </tr>
   <tr>
    <th>スケジュールメモ</th>
   <td><%= @task.memo %></td>
   </tr>
 </table>
 
 <div>
   <ul>
     <li><%= link_to "予定一覧に戻る", :tasks %></li>
   </ul>
 </div>